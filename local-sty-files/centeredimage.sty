\newcommand{\cteximage}[2][\linewidth]{%
  \setlength{\mb@indent}{\linewidth}%
  \addtolength{\mb@indent}{-#1}%
  \setlength{\mb@indent}{.5\mb@indent}%
  \hspace*{\mb@indent}%
  \resizebox{#1}{!}{\input{#2}}%
}

